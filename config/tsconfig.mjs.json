{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": ["es5", "es6", "dom", "es2016", "es2017", "es2018", "esnext"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "../lib",
        "rootDir": "../lib",
        "removeComments": false,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["../node_modules"],
    "include": [
        "../lib/**/*"
    ]
}
